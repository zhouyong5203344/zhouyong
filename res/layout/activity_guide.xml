<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_img_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_newyear" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/btn_start_guide"
        android:textColor="@drawable/btn_start_text_guide"
        android:text="@string/btn_start"
        android:visibility="invisible" />
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
        android:id="@+id/ll_point_group" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
        <View
        android:id="@+id/v_point" 
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/shape_point_red"
        />
    </RelativeLayout>
    
</RelativeLayout>