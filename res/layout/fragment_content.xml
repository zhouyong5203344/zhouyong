<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    
     <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
     
         <RadioGroup 
         android:id="@+id/rg_fragment"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#898989"
         android:orientation="horizontal"
         >
         <RadioButton 
           android:id="@+id/rb_content"
           style="@style/BottomTabStyle"
           android:text="首页"
           android:drawableTop="@drawable/btn_tab_content_selector"
           />
         <RadioButton 
           android:id="@+id/rb_news"
           style="@style/BottomTabStyle"
           android:text="新闻中心"
           android:drawableTop="@drawable/btn_tab_news_selector"
           />
         <RadioButton 
           android:id="@+id/rb_service"
           style="@style/BottomTabStyle"
           android:text="智慧服务"
           android:drawableTop="@drawable/btn_tab_service_selector"
           />
         <RadioButton 
           android:id="@+id/rb_government"
           style="@style/BottomTabStyle"
           android:text="政务"
           android:drawableTop="@drawable/btn_tab_government_selector"
           />
         <RadioButton 
           android:id="@+id/rb_setting"
           style="@style/BottomTabStyle"
           android:text="设置"
           android:drawableTop="@drawable/btn_tab_setting_selector"
           />
         
     </RadioGroup>
</LinearLayout>